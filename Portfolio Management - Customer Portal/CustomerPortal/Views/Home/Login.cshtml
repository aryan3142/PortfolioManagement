@model CustomerPortal.Models.LoginModel

@{
    Layout = "_Layout";
}

@if (ViewBag.Status == true)
{
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    Username or Password incorrect !
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}

<div class="container" style="margin:auto;margin-top:50px;position:relative;z-index:10">
    <h4 class="text-light">Login</h4>
    <hr class="bg-light" />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-light"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label text-light"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-light"></span>
                </div> <br />
                <div class="form-group">
                    <label asp-for="Password" class="control-label text-light"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-light"></span>
                </div><br />
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-8 bg-image hover-overlay ripple">
            <img src="~/Images/undraw_Login_re_4vu2.png" class="img-fluid rounded hover-shadow" />
            <a href="#!">
                <div class="mask" style="background-color: rgba(57, 192, 237, 0.2);"></div>
            </a>
        </div>
    </div>
</div>

